<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main App Theme (Updated parent) -->
    <style name="Theme.CampusAlert" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryDark">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- System bar colors -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.CampusAlert.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App Bar Overlay -->
    <style name="Theme.CampusAlert.AppBarOverlay" parent="ThemeOverlay.Material3.Dark"/>

    <!-- Popup Overlay -->
    <style name="Theme.CampusAlert.PopupOverlay" parent="ThemeOverlay.Material3.Light"/>

</resources>